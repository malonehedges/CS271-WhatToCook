<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.malone.whattocook.SearchActivity"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/diet_container"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/diet_label"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="end"
            android:text="@string/diet_label" />
        <Spinner
            android:id="@+id/diet_spinner"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/serving_container"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/diet_container">
        <TextView
            android:id="@+id/serving_label"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="end"
            android:text="@string/serving_label" />
        <Spinner
            android:id="@+id/serving_spinner"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/preparation_container"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serving_container">
        <TextView
            android:id="@+id/preparation_label"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="end"
            android:text="@string/preparation_label" />
        <Spinner
            android:id="@+id/preparation_spinner"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/search_recipies_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/preparation_container"
        android:layout_marginTop="35dp"
        android:text="@string/submit_label" />
</RelativeLayout>
